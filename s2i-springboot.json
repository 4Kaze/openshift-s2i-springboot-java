{
  "apiVersion": "v1",
  "kind": "Template",
  "metadata": {
    "name": "springboot-gradle-application",
    "annotations": {
        "iconClass": "icon-spring"
    }
  },
  "parameters": [
    {
      "name": "APP_NAME",
      "displayName": "Application Name",
      "description": "Application name",
      "value": ""
    },
    {
      "name": "GIT_URI",
      "displayName": "Git Repository containing application source code",
      "description": "GIT URL pointing to the repository containing application source code for Java Spring Boot Application",
      "value": "https://github.com/ganrad/YourProject.git"
    },
    {
      "description": "Git branch/tag reference",
      "name": "GIT_REF",
      "value": "master"
    },
    {
      "description": "Git Directory",
      "name": "CONTEXT_DIR"
    },
    {
      "name": "GIT_SECRET",
      "displayName": "Github trigger secret",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{12}"
    },
    {
      "name": "APP_OPTIONS",
      "displayName": "Application arguments",
      "description": "Arguments to be passed to the Springboot application (at runtime)"
    }
  ],
  "objects": [
    {
      "apiVersion": "v1",
      "kind": "ImageStream",
      "metadata": {
        "annotations": {
          "openshift.io/generated-by": "OpenShiftNewApp"
        },
        "labels": {
          "app": "${APP_NAME}"
        },
        "name": "${APP_NAME}"
      },
      "spec": {
        "tags": [
          {
            "annotations": null,
            "from": {
              "kind": "DockerImage",
              "name": "${APP_NAME}:latest"
            },
            "importPolicy": {},
            "name": "latest"
          }
        ]
      },
      "status": {
        "dockerImageRepository": ""
      }
    },
    {
      "apiVersion": "v1",
      "kind": "BuildConfig",
      "metadata": {
        "annotations": {
          "openshift.io/generated-by": "OpenShiftNewApp"
        },
        "labels": {
          "app": "${APP_NAME}"
        },
        "name": "${APP_NAME}"
      },
      "spec": {
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${APP_NAME}:latest"
          }
        },
        "resources": {},
        "source": {
          "git": {
            "uri": "${GIT_URI}",
	        "ref": "${GIT_REF}"
          },
          "secrets": [],
	      "contextDir": "${CONTEXT_DIR}",
          "type": "Git"
        },
        "strategy": {
          "sourceStrategy": {
            "from": {
                "kind": "ImageStreamTag",
	            "name": "springboot-gradle:latest"
            }
          },
          "type": "Source"
        },
        "triggers": [
          {
            "github": {
		        "secret": "${GIT_SECRET}"
            },
            "type": "GitHub"
          },
          {
            "type": "ConfigChange"
          },
          {
            "imageChange": {},
            "type": "ImageChange"
          }
        ]
      },
      "status": {
        "lastVersion": 0
      }
    },
    {
      "apiVersion": "v1",
      "kind": "DeploymentConfig",
      "metadata": {
        "annotations": {
          "openshift.io/generated-by": "OpenShiftNewApp"
        },
        "labels": {
          "app": "${APP_NAME}"
        },
        "name": "${APP_NAME}"
      },
      "spec": {
        "replicas": 1,
        "selector": {
          "app": "${APP_NAME}",
          "deploymentconfig": "${APP_NAME}"
        },
        "strategy": {
          "resources": {},
          "rollingParams": {
            "intervalSeconds": 1,
            "maxSurge": "25%",
            "maxUnavailable": "25%",
            "timeoutSeconds": 600,
            "updatePeriodSeconds": 1
          },
          "type": "Rolling"
        },
        "template": {
          "metadata": {
            "annotations": {
              "openshift.io/generated-by": "OpenShiftNewApp"
            },
            "labels": {
              "app": "${APP_NAME}",
              "deploymentconfig": "${APP_NAME}"
            }
          },
          "spec": {
            "containers": [
              {
                "image": "${APP_NAME}",
                "imagePullPolicy": "Always",
                "name": "${APP_NAME}",
                "ports": [
                  {
                    "containerPort": 8080,
                    "protocol": "TCP"
                  }
                ],
                "resources": {},
                "terminationMessagePath": "/dev/termination-log",
                "volumeMounts": [
                    {
                        "name": "ssl-certs",
                        "readOnly": true,
                        "mountPath": "/mnt/certs"
                    }
                ]
              }
            ],
            "dnsPolicy": "ClusterFirst",
            "restartPolicy": "Always",
            "securityContext": {},
            "terminationGracePeriodSeconds": 30,
            "volumes": [
                {
                    "name": "ssl-certs",
                    "secret": {
                        "secretName": "sso-truststore",
                        "items": [
                            {
                                "key": "truststore",
                                "path": "truststore.jks"
                            }
                        ],
                        "defaultMode": 420
                    }
                }
            ]
          }
        },
        "test": false,
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "${APP_NAME}"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "${APP_NAME}:latest"
              }
            },
            "type": "ImageChange"
          }
        ]
      },
      "status": {}
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "annotations": {
          "openshift.io/generated-by": "OpenShiftNewApp"
        },
        "creationTimestamp": null,
        "labels": {
          "app": "${APP_NAME}"
        },
        "name": "${APP_NAME}"
      },
      "spec": {
        "ports": [
          {
            "name": "8080-tcp",
            "port": 8080,
            "protocol": "TCP",
            "targetPort": 8080
          }
        ],
        "selector": {
          "app": "${APP_NAME}",
          "deploymentconfig": "${APP_NAME}"
        },
        "sessionAffinity": "None",
        "type": "ClusterIP"
      },
      "status": {
        "loadBalancer": {}
      }
    }
  ]
}
